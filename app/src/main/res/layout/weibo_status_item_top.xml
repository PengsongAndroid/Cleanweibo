<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/weibo_status_head_image"
        android:layout_width="@dimen/weibo_status_head_pic"
        android:layout_height="@dimen/weibo_status_head_pic"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@mipmap/head2" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/weibo_status_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测试"
                android:textColor="@color/weibo_vip"
                android:textSize="@dimen/text14" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/weibo_status_profile_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16分钟前  "
                android:textColor="@color/textGrey"
                android:textSize="@dimen/text12" />

            <TextView
                android:id="@+id/weibo_status_weiboComeFrom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="来自 微博weibo.com"
                android:textColor="@color/textGrey"
                android:textSize="@dimen/text12" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>